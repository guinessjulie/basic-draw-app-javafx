<?xml version="1.0" encoding="UTF-8"?>
 
<?import java.lang.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.textfield.*?>
<?import javafx.geometry.*?>
 
<BorderPane fx:controller="se.kth.csc.iprog.draw.javafx.form.FormController" xmlns:fx="http://javafx.com/fxml"
    prefHeight="200" prefWidth="320">
         
    <center>
     <ListView fx:id="list" />

    </center>
    <right>
<GridPane
    xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10"  >

    <padding><Insets top="25" right="25" bottom="10" left="25"/></padding>
    
    <Label text="X:"
        GridPane.columnIndex="0" GridPane.rowIndex="1"/>
 
    <TextField fx:id="xField" onAction="#handleCoordinateChange"
        GridPane.columnIndex="1" GridPane.rowIndex="1"/>
 
    <Label text="Y:"
        GridPane.columnIndex="0" GridPane.rowIndex="2"/>
 
    <TextField fx:id="yField" onAction="#handleCoordinateChange"
        GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Width:"
        GridPane.columnIndex="0" GridPane.rowIndex="3"/>
 
    <TextField fx:id="wField" onAction="#handleCoordinateChange"
        GridPane.columnIndex="1" GridPane.rowIndex="3"/>
 
    <Label text="Height:"
        GridPane.columnIndex="0" GridPane.rowIndex="4"/>
 
    <TextField fx:id="hField" onAction="#handleCoordinateChange"
        GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <Label text="Surface:"
        GridPane.columnIndex="0" GridPane.rowIndex="5"/>

    <Label text="" fx:id="surfaceField"
        GridPane.columnIndex="1" GridPane.rowIndex="5"/>

</GridPane>
    </right>
    <bottom>
        <Label id="errorLabel" fx:id="errorLabel"/>
    </bottom>
 
</BorderPane>